{
	"$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"moduleResolution": "Node",
		"module": "CommonJS",
		"strict": true,
		"types": ["lua-types/5.1", "love-typescript-definitions", "@typescript-to-lua/language-extensions"],
		"outDir": "dist/",
		"rootDir": "src/",
		"esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "MYRIAD_INTERNAL_IF_YOU_USE_THIS_YOU_ARE_FIRED.createElement"
	},
	"tstl": {
		"luaTarget": "5.1",
		"sourceMapTraceback": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
